class DayofWeek:
    def __init__(self, next = None, prev = None, data = None):
        self.data = data
        self.next = next
        self.prev = prev

class Week:
    def __init__(self):
        self.__head = None

    def sethead(self, newdata):
        self.__head = DayofWeek(newdata)

    def gethead(self, newdata):
        self.__head = DayofWeek(newdata)

    def append(self, newdata):
        newDay = DayofWeek(newdata)
        newDay.next = None
        if self.__head is None:
            newDay.previous = None
            self.__head = newDay
        else:
            temp = self.__head
            while temp.next is not None:
                temp = temp.next
            temp.next = newDay
            newDay.previous = temp

    def display(self):
        temp = self.__head
        while temp is not None:
            print temp.data
            temp = temp.next

    def appendAfter(self, previousDay, newDay):
        new = WeekDay(newDay)
        previous_Day = self.find(previousDay)

        if previous_Day is None:
            print("not in the list")

        new.next = previous_Day.next
        previous_Day.next = new
        new.previous = previous_Day

        if new.next is not None:
            new.next.previous = new

    def delete(self, Day):
        deletedata = self.find(Day)

        if self.__head == deletedata:
            self.__head = deletedata.next
        if deletedata.next is not None:
            deletedata.next.previous = deletedata.previous
        if deletedata.previous is not None:
            deletedata.previous.next = deletedata.next
def main():

    my_week = Week()
    my_week.append("Monday")
    my_week.append("Tuesday")
    my_week.append("Wednesday")
    my_week.append("Thursday")
    my_week.append("Friday")
    my_week.append("Saturday")
    my_week.append("Sunday")


#    my_week.reverse()
    my_week.appendAfter("Monday", "DeleteItem")
    my_week.delete("DeleteItem")
    my_week.display()
 #   my_week.search()


